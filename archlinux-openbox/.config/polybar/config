module-margin-right = 1

font-0 = Ubuntu Mono:style=Bold:size=18;0
font-1 = Noto Sans Mono CJK SC:style=Bold:size=18:;0
font-2 = Noto Color Emoji:style=Bold:size=18:;0

modules-left = workspaces
modules-center = date
modules-right = network cpu memory battery

tray-position = right
tray-padding = 0
tray-maxsize = 32

cursor-click = pointer
cursor-scroll = ns-resize


[module/date]
type = internal/date
interval = 1
date =
date-alt = " %Y-%m-%d"
time = %H:%M
time-alt = %H:%M:%S
label = %date% %time%


[module/network]
type = internal/network
interface = wlp4s0
interval = 1
label-connected = %downspeed:min:max%
label-disconnected = not connected


[module/workspaces]
type = internal/xworkspaces
pin-workspaces = true
enable-click = true
enable-scroll = false
label-active = " %name% "
label-monitor = " %name% "
label-occupied = " %name% "
label-urgent = " %name% "
label-empty = " %name% "
label-active-underline = #409EFF


[module/cpu]
type = internal/cpu
interval = 0.5
label = CPU %percentage%%


[module/memory]
type = internal/memory
interval = 3
label = RAM %percentage_used%%


[module/battery]
type = internal/battery
full-at = 97
battery = BAT0

[colors]
background = #222
foreground = #dfdfdf


[settings]
screenchange-reload = true


[global/wm]
margin-top = 0
margin-bottom = 0


[bar/default]
width = 100%
height = 48
fixed-center = true
override-redirect = false
separator = |
tray-detached = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

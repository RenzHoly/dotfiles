[colors]
background = #222
foreground = #dfdfdf


[settings]
screenchange-reload = true


[global/wm]
margin-top = 0
margin-bottom = 0


[bar/default]
width = 100%
height = 48
fixed-center = true
override-redirect = false
separator = |
tray-detached = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = Ubuntu Mono:style=Bold:size=19

modules-left = workspaces
modules-center = date cpu freq memory temperature fan network battery
modules-right = 

tray-position = right
tray-padding = 0
tray-maxsize = 32

cursor-click = pointer
cursor-scroll = ns-resize


[module/date]
type = internal/date
interval = 1
date = %Y-%m-%d
time = %H:%M:%S
label = "%date% %time%"


[module/network]
type = internal/network
interface = wlp4s0
interval = 1
label-connected = %downspeed:min:max%
label-disconnected = 


[module/workspaces]
type = internal/xworkspaces
pin-workspaces = true
enable-click = true
enable-scroll = false
label-active = " %name% "
label-monitor = " %name% "
label-occupied = " %name% "
label-urgent = " %name% "
label-empty = " %name% "
label-active-underline = #409EFF


[module/cpu]
type = internal/cpu
interval = 0.5
label = %percentage%%


[module/memory]
type = internal/memory
interval = 0.5
label = %gb_used%


[module/battery]
type = internal/battery
full-at = 96
battery = BAT0
adapter = ADP1
poll-interval = 60
label-charging = Charging %percentage%%
label-discharging = Battery %percentage%%
label-full = 


[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input
warn-temperature = 84
label-warn-foreground = #d73a49


[module/fan]
type = custom/script
format = <label>
label = %output% RPM
exec = cat /sys/devices/platform/applesmc.768/fan1_input
interval = 0.5


[module/freq]
type = custom/script
exec = cat /sys/devices/system/cpu/cpu*/cpufreq/scaling_cur_freq | awk '{ total += $1; count++ } END { printf("%.1f GHz", total / count / 1000000) }'
interval = 0.5
